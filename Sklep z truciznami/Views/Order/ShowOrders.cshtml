@model List<Sklep_z_truciznami.Models.Order>

@{
    ViewBag.Title = "ShowOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowOrders</h2>
<div>
    <p id ="message" class="text-success visible">@ViewBag.Message</p>
</div>
@{if (Model == null || Model.Count==0)
{
    <div>List of orders is empty</div>
}
  else
  {
    <table class="table" name="orderTable" id="orderTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].ClientId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].AnswerDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnswerDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @{if (item.Status == Sklep_z_truciznami.Models.OrderStatus.Ordered)
                        {
                            if (User.IsInRole("Owner"))
                            {

                                @Html.ActionLink("Accept order", "HandleOrder", "Order", new { orderID = item.OrderId, acceptance = true }, null)<span> | </span>
                                @Html.ActionLink("Reject order", "HandleOrder", "Order", new { orderID = item.OrderId, acceptance = false }, null)

                            }
                            else
                            {
                                @Html.ActionLink("Cancel order", "HandleOrder", "Order", new { orderID = item.OrderId, acceptance = false }, null)
                            }
                        }
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
  }
}