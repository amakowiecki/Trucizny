@model Sklep_z_truciznami.Models.IndexViewModel
@{
    ViewBag.Title = "Twoje dane";
}

<h2 style="margin-top:40px">@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal" style="margin:40px auto">
        <dt>Hasło:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Stwórz", "SetPassword")
            }
            ]
        </dd>
        <dt>Dane adresowe:</dt>
        <dd>
            @Model.FirstName @Model.LastName<br />
            @Model.StreetAndNumber<br />
            @Model.City<br />
            @Model.ZipCode<br />
        </dd>
        <dd>
            [@Html.ActionLink("Zmień dane", "ChangeData")]
        </dd>
    </dl>
</div>
